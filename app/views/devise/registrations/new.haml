%h1= t '.sign_up'

= form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: 'form-horizontal', role: 'form' } do |f|
  = devise_error_messages!

  .form-group
    = f.label :email, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.email_field :email, class: 'form-control'

  .form-group
    = f.label :password, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.password_field :password, class: 'form-control'

  .form-group
    .col-lg-offset-2.col-lg-2
      %button.btn.btn-default.btn-lg{:type=>'submit'}
        = t '.sign_up'
